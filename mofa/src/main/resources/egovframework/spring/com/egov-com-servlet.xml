    <!-- 서블릿컨네이너상의 exception에 대한 오류 페이지를 연결하는 mvc 설정-->
    <bean class="aten.com.backoffice.sts.error.web.CustomExceptionResolver">
        <property name="order" value="2" />
        <property name="defaultErrorView" value="/cmm/error/egovError"/>
        <property name="defaultStatusCode" value="200" />
        <property name="exceptionAttribute" value="exception" />
        <property name="excludedExceptions" value="egovframework.com.cmm.exception.UncheckException" />
        <property name="exceptionMappings">
            <props>
                <prop key="org.springframework.web.servlet.PageNotFound">/cmm/error/egovError</prop>
                <prop key="org.springframework.dao.DataAccessException">/cmm/error/egovError</prop>
                <prop key="org.springframework.transaction.TransactionException">/cmm/error/egovError</prop>
                <prop key="egovframework.rte.fdl.cmmn.exception.EgovBizException">/cmm/error/egovError</prop>
                <prop key="org.springframework.security.AccessDeniedException">/cmm/error/error_security</prop>
                <prop key="org.springframework.web.util.NestedServletException">/cmm/error/egovError</prop>
                <prop key="org.apache.jasper.JasperException">/cmm/error/egovError</prop>
                <prop key="java.lang.IllegalStateException">/cmm/error/egovError</prop>
                <prop key="java.lang.NullPointerException">/cmm/error/egovError</prop>
                <prop key="org.springframework.beans.NotReadablePropertyException">/cmm/error/egovError</prop>
                <prop key="org.apache.ibatis.binding.BindingException">/cmm/error/egovError</prop>
                <prop key="egovframework.com.cmm.exception.CustomerExcetion">/cmm/error/duplication</prop>
                <prop key=" javax.servlet.jsp.JspTagException">/cmm/error/egovError</prop>
               
            </props>
        </property>
        <property name="statusCodes">
            <props>
<!--                  <prop key="/cmm/error/egovError">500</prop>
                 <prop key="/cmm/errro/error_security">403</prop>
                 <prop key="/cmm/errro/error_business">500</prop>
                 <prop key="/cmm/errro/error_ajax">500</prop>
                 <prop key="/cmm/error/duplication">909</prop> -->
                 
                 <prop key="/cmm/error/egovError">500</prop>
                 <prop key="/cmm/error/error_security">403</prop>
                 <prop key="/cmm/error/error_business">500</prop>
                 <prop key="/cmm/error/error_ajax">500</prop>
                 <prop key="/cmm/error/duplication">909</prop>
            </props>
        </property>
    </bean>

    
      
    <!-- Annotation 을 사용하지 않는 경우에 대한 MVC 처리 설정 -->
    <!-- <mvc:annotation-driven/>   -->
    <mvc:interceptors>
    	<mvc:interceptor>
    		<mvc:mapping path="/backoffice/**/*.do" />
    		<mvc:exclude-mapping path="/backoffice/login.do"/>
    		<mvc:exclude-mapping path="/backoffice/SecurityLogin.do"/> 		
    		<bean class="egovframework.com.cmm.interceptor.AuthenticInterceptor" />
		</mvc:interceptor>
    </mvc:interceptors>
    
    <!-- 화면처리용 JSP 파일명의  prefix, suffix 처리에 대한 mvc 설정  -->
    <bean class="org.springframework.web.servlet.view.BeanNameViewResolver" p:order="0"/>    
    <bean class="org.springframework.web.servlet.view.UrlBasedViewResolver" p:order="1"
	    p:viewClass="org.springframework.web.servlet.view.JstlView"
	    p:prefix="/WEB-INF/jsp/" p:suffix=".jsp"/>
	    
	 <mvc:resources mapping="/js/**" location="/js/" />
	 <mvc:resources mapping="/images/**" location="/images/" />
	 <mvc:resources mapping="/font/**" location="/font/" />
	 <mvc:resources mapping="/css/**" location="/css/" />
	 <mvc:resources mapping="/upload/**" location="/upload/" />  
	 <mvc:resources mapping="/SE/**" location="/SE/" />   
	 
