<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
	
	<bean id="resveAgentStateCreateScheduling"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="AgentStateCreateSchedulerService" />
		<property name="targetMethod" value="agentStateScheduling" />
		<property name="concurrent" value="false" />
	</bean> 
	
	<bean id="resveAgentStateCreateSchedulingTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="resveAgentStateCreateScheduling" />
		<property name="cronExpression" value="0 0 23 * * ?" />
	</bean>
	
	<bean id="agentStatsCreateBatchScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="resveAgentStateCreateSchedulingTrigger" />
			</list>
		</property>
	</bean>    
	
</beans>
